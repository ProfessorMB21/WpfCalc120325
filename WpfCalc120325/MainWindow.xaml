<Window x:Class="WpfCalc120325.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalc120325"
        mc:Ignorable="d"
        Title="Calculator2025" Height="650" Width="400">
    
    <!--Resources-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Denis.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Output box-->
        <TextBox 
            IsReadOnly="True"
            x:Name="InOutput"
            Text="0"
            FontSize="48"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            TextAlignment="Right"
            VerticalAlignment="Center"/>

        <!--Calculator buttons-->
        <Button
            Style="{DynamicResource Actions}"
            Content="C"
            Grid.Column="0"
            Grid.Row="1"
            Click="Clear_Click"/>
        
        <Button
            Style="{DynamicResource Actions}"
            Content="+"
            Grid.Column="3"
            Grid.Row="1"
            Click="Action_Click"/>
        
        <Button
            Style="{DynamicResource Actions}"
            Content="-"
            Grid.Column="3"
            Grid.Row="2"
            Click="Action_Click"/>
        
        <Button
            Style="{DynamicResource Actions}"
            Content="÷"
            Grid.Column="3"
            Grid.Row="3"
            Click="Action_Click"/>
        
        <Button
            Style="{DynamicResource Actions}"
            Content="×"
            Grid.Column="3"
            Grid.Row="4"
            Click="Action_Click"/>
        
        <Button
            Style="{DynamicResource Result}"
            Content="="
            Grid.Column="3"
            Grid.Row="5"
            Click="Result_Click"/>

        <Button
            Style="{DynamicResource Result}"
            Content="@"
            Grid.Row="1"
            Grid.Column="2"
            Click="Theme_Click"
            />

        <Button
            Content="."
            Grid.Column="2"
            Grid.Row="5"
            Click="Number_Click"/>
        
        <Button
            Content="±"
            Grid.Column="0"
            Grid.Row="5"
            Background="White"
            Click="Action_Click"/>
        <Button
            Content="7"
            Grid.Column="0"
            Grid.Row="2"
            Click="Number_Click"/>
        <Button
            Content="8"
            Grid.Column="1"
            Grid.Row="2"
            Click="Number_Click"/>
        <Button
            Content="9"
            Grid.Column="2"
            Grid.Row="2"
            Click="Number_Click"/>
        <Button
            Content="4"
            Grid.Column="0"
            Grid.Row="3"
            Click="Number_Click"/>
        <Button
            Content="5"
            Grid.Column="1"
            Grid.Row="3"
            Click="Number_Click"/>
        <Button
            Content="6"
            Grid.Column="2"
            Grid.Row="3"
            Click="Number_Click"/>
        <Button
            Content="1"
            Grid.Column="0"
            Grid.Row="4"
            Click="Number_Click"/>
        <Button
            Content="2"
            Grid.Column="1"
            Grid.Row="4"
            Click="Number_Click"/>
        <Button
            Content="3"
            Grid.Column="2"
            Grid.Row="4"
            Click="Number_Click"/>
        <Button
            Content="0"
            Grid.Column="1"
            Grid.Row="5"
            Click="Number_Click"/>
        
    </Grid>
</Window>
